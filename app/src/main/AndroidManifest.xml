<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.filmo">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Filmo"
        tools:targetApi="31">

        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <!-- Resto de actividades -->
        <activity
            android:name=".men_serie"
            android:exported="false" />
        <activity
            android:name=".FavoritosActivity"
            android:exported="false" />

        <activity
            android:name=".menu_modificar_perfil"
            android:exported="false" />
        <activity
            android:name=".men_crearCuenta"
            android:exported="false" />
        <activity
            android:name=".men_perfil"
            android:exported="false" />

        <activity
            android:name=".men_pelis"
            android:exported="false" />

        <activity
            android:name=".men_principal"
            android:exported="false" />
    </application>

</manifest>

